# Backend Environment Variables
NODE_ENV=development
PORT=8080
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket Configuration
WS_PORT=8080
WS_PATH=/pixelcolony
HEARTBEAT_INTERVAL=30000
CONNECTION_TIMEOUT=10000

# Room Configuration
ROOM_CLEANUP_INTERVAL=3600000
ROOM_INACTIVE_TIMEOUT=3600000
ROOM_DELETE_TIMEOUT=86400000
TASK_TIMEOUT_DEFAULT=300000
MAX_SLAVES_PER_ROOM=50
MAX_TASKS_PER_BATCH=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
ROOM_CREATION_PER_HOUR=10
TASK_CREATION_PER_MINUTE=100
ROOM_JOINING_PER_MINUTE=20
MESSAGES_PER_SECOND=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/pixelcolony.log

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
CORS_ENABLED=true
CORS_ORIGIN=*
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Development
DEBUG_ENABLED=false
PRETTY_PRINT_LOGS=true
